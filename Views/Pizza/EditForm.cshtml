@{
    ViewData["Title"] = "EditForm";
    Layout = "_Layout";
}
@model Pizza

<div class="container">
    <h1>@ViewData["Title"]</h1>
    <form method="POST" asp-controller="Pizza" asp-action="Edit" asp-route-id="@Model.Id">
        @Html.AntiForgeryToken()
        <div class="form-floating mb-3">
            <input type="text" class="form-control" asp-for="Name" id="Name" placeholder="Name">
            <label for="Name">Name</label>
            <span asp-validation-for="Name"></span>
        </div>
        <div class="form-floating mb-3">
            <input type="text" class="form-control" asp-for="Description" id="Description" placeholder="Description">
            <label for="Description">Description</label>
            <span asp-validation-for="Description"></span>
        </div>
        <div class="form-floating mb-3">
            <input type="text" class="form-control" asp-for="Photo" id="Photo" placeholder="Photo">
            <label for="Photo">Photo</label>
            <span asp-validation-for="Photo"></span>
        </div>
        <div class="form-floating mb-3">
            <input type="number" class="form-control" asp-for="Price" id="Price" placeholder="Price">
            <label for="Price">Price</label>
            <span asp-validation-for="Price"></span>
        </div>

        <div class="d-flex justify-content-around">
            <button class="btn btn-primary" action="submit">Edit</button>
            <a class="btn btn-primary" asp-action="Index">Back to List</a>
        </div>
    </form>
</div>
